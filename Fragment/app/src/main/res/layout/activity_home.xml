<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    android:background="#FFEFEFEF"
    tools:ignore="contentDescription">

    <ImageView
        android:id="@+id/shape1"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/random_shape1"
        android:layout_gravity="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/shape1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profil"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:src="@drawable/img_profil"/>

        <TextView
            android:id="@+id/tv6"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/home_edit"
            android:backgroundTint="#FFCED1D8"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/lemonmilk_reguler"
            android:text="@string/name"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/custom"/>

        <TextView
            android:id="@+id/tv7"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/home_edit"
            android:backgroundTint="#FFCED1D8"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/lemonmilk_reguler"
            android:text="@string/nim"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/custom"
            app:layout_constraintTop_toBottomOf="@id/tv6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/shape2"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:adjustViewBounds="true"
        android:layout_marginStart="20dp"
        android:src="@drawable/random_shape2"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>